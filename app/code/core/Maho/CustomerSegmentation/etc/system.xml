<?xml version="1.0"?>
<config>
    <sections>
        <customer_segmentation translate="label" module="customersegmentation">
            <label>Customer Segmentation</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>300</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <refresh_frequency translate="label comment">
                            <label>Auto Refresh Frequency (hours)</label>
                            <comment>How often to automatically refresh segment membership</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-number validate-greater-than-zero</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </refresh_frequency>
                    </fields>
                </general>
            </groups>
        </customer_segmentation>
    </sections>
</config>
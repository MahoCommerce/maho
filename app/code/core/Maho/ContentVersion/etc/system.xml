<config>
    <sections>
        <general>
            <groups>
                <contentversion translate="label" module="contentversion">
                    <label>Content Versioning</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>900</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <max_versions translate="label comment">
                            <label>Max Versions Per Entity</label>
                            <comment>Maximum number of versions to keep per entity. Set to 0 for unlimited.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-zero-or-greater validate-digits</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_versions>
                        <max_age_days translate="label comment">
                            <label>Max Version Age (Days)</label>
                            <comment>Delete versions older than this many days. Set to 0 for unlimited.</comment>
                            <frontend_type>text</frontend_type>
                            <validate>validate-zero-or-greater validate-digits</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </max_age_days>
                    </fields>
                </contentversion>
            </groups>
        </general>
    </sections>
</config>

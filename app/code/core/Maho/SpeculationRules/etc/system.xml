<?xml version="1.0"?>
<config>
    <sections>
        <dev>
            <groups>
                <speculation_rules translate="label">
                    <label>Speculation Rules</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>950</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable Speculation Rules</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <eager_mode translate="label">
                            <label>Eager Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>speculationrules/system_config_source_mode</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </eager_mode>
                        <eager_selectors translate="label comment">
                            <label>Eager CSS Selectors</label>
                            <comment>One CSS selector per line. Example: .product-link</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </eager_selectors>
                        <moderate_mode translate="label">
                            <label>Moderate Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>speculationrules/system_config_source_mode</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </moderate_mode>
                        <moderate_selectors translate="label comment">
                            <label>Moderate CSS Selectors</label>
                            <comment>One CSS selector per line. Triggered on 200ms hover.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </moderate_selectors>
                        <conservative_mode translate="label">
                            <label>Conservative Mode</label>
                            <frontend_type>select</frontend_type>
                            <source_model>speculationrules/system_config_source_mode</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </conservative_mode>
                        <conservative_selectors translate="label comment">
                            <label>Conservative CSS Selectors</label>
                            <comment>One CSS selector per line. Triggered on mouse/touch down.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><enabled>1</enabled></depends>
                        </conservative_selectors>
                    </fields>
                </speculation_rules>
            </groups>
        </dev>
    </sections>
</config>

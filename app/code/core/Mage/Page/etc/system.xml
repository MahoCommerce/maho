<config>
    <sections>
        <design translate="label" module="core">
            <groups>
                <head translate="label">
                    <label>HTML Head</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <shortcut_icon translate="label comment">
                            <label>Favicon Icon</label>
                            <comment>Allowed file types: ICO, PNG, GIF, JPG, JPEG, APNG, WEBP, AVIF, SVG. Not all browsers support all these formats!</comment>
                            <frontend_type>image</frontend_type>
                            <backend_model>adminhtml/system_config_backend_image_favicon</backend_model>
                            <base_url type="media" scope_info="1">favicon</base_url>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </shortcut_icon>
                        <default_title translate="label">
                            <label>Default Title</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_title>
                        <title_prefix translate="label">
                            <label>Title Prefix</label>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_prefix>
                        <title_suffix translate="label">
                            <label>Title Suffix</label>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title_suffix>
                        <default_description translate="label">
                            <label>Default Description</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_description>
                        <default_keywords translate="label">
                            <label>Default Keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_keywords>
                        <default_robots translate="label">
                            <label>Default Robots</label>
                            <frontend_type>select</frontend_type>
                            <source_model>page/source_robots</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_robots>
<!--
                        <default_media_type translate="label">
                            <label>Default Media Type</label>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_media_type>
                        <default_charset translate="label">
                            <label>Default Charset</label>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </default_charset>
-->
                        <includes translate="label comment">
                            <label>Miscellaneous Scripts</label>
                            <comment>This will be included before head closing tag in page HTML.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </includes>
                        <demonotice translate="label">
                            <label>Display Demo Store Notice</label>
                            <frontend_type>select</frontend_type>
                            <source_model>page/source_demonotice</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </demonotice>
                        <demonotice_text translate="label comment">
                            <label>Demo Store Notice Text</label>
                            <comment>Leave empty to use the default text.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>81</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><demonotice>text</demonotice></depends>
                        </demonotice_text>
                        <demonotice_cms_block translate="label">
                            <label>Demo Store Notice CMS Block</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_block</source_model>
                            <sort_order>82</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends><demonotice>cms_block</demonotice></depends>
                        </demonotice_cms_block>
                    </fields>
                </head>
                <header translate="label">
                    <label>Header</label>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <logo_src translate="label">
                            <label>Logo Image Src</label>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_src>
                        <logo_width translate="label">
                            <label>Logo Width (in px)</label>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_width>
                        <logo_height translate="label">
                            <label>Logo Height (in px)</label>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_height>
                        <logo_alt translate="label">
                            <label>Logo Image Alt</label>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </logo_alt>
                        <logo_src_small translate="label comment">
                            <label>Small Logo Image Src</label>
                            <sort_order>25</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Deprecated: Use SVG or srcset</comment>
                        </logo_src_small>
                        <welcome translate="label">
                            <label>Welcome Text</label>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </welcome>
                    </fields>
                </header>
                <footer translate="label">
                    <label>Footer</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <copyright translate="label">
                            <label>Copyright</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </copyright>
                        <absolute_footer translate="label comment">
                            <label>Miscellaneous HTML</label>
                            <comment>This will be displayed just before body closing tag.</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </absolute_footer>
                    </fields>
                </footer>
            </groups>
        </design>
    </sections>
</config>

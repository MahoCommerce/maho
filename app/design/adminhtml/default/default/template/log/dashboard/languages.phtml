/** @var Mage_Log_Block_Dashboard_Languages $this */
$data = $this->getLanguages();
$languages = $data['languages'] ?? [];
$total = $data['total'] ?? 0;
?>
<div class="dashboard-languages">
    <?php if (!empty($languages)): ?>
        <div class="languages-list">
            <?php foreach ($languages as $code => $count): ?>
                <?php $percentage = $this->calculatePercentage($count, $total); ?>
                <div class="language-row">
                    <span class="language-flag"><?= $this->getLanguageFlag($code) ?></span>
                    <span class="language-name"><?= $this->escapeHtml($this->getLanguageName($code)) ?></span>
                    <div class="language-bar-container">
                        <div class="language-bar" style="width: <?= $percentage ?>%"></div>
                    </div>
                    <span class="language-percentage"><?= $percentage ?>%</span>
                </div>
            <?php endforeach ?>
        </div>
    <?php else: ?>
        <p class="no-data"><?= $this->__('No language data available') ?></p>
    <?php endif ?>
</div>


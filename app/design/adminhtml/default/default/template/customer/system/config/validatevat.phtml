/** @var Mage_Adminhtml_Block_Customer_System_Config_Validatevat $this */
?>
<script type="text/javascript">
    function validateVat() {
        var elem = document.getElementById('<?= $this->getHtmlId() ?>');

        params = {
            country: document.getElementById('general_store_information_merchant_country').value,
            vat: document.getElementById('general_store_information_merchant_vat_number').value
        };

        const formData = new FormData();
        Object.entries(params).forEach(([key, value]) => {
            formData.append(key, value);
        });

        mahoFetch('<?= $this->getAjaxUrl() ?>', {
            method: 'POST',
            body: formData
        })
        .then(response => {
            let result = '<?= $this->jsQuoteEscape($this->__('VAT Number is Invalid')) ?>';
            try {
                const responseText = typeof response === 'string' ? response : JSON.stringify(response);
                if (responseText == '1') {
                    result = '<?= $this->jsQuoteEscape($this->__('VAT Number is Valid')) ?>';
                    elem.classList.remove('fail');
                    elem.classList.add('success');
                } else {
                    elem.classList.remove('success');
                    elem.classList.add('fail');
                }
            } catch (e) {
                elem.classList.remove('success');
                elem.classList.add('fail');
            }
            document.getElementById('validation_result').innerHTML = result;
        })
        .catch(error => {
            console.error('VAT validation error:', error);
            elem.classList.remove('success');
            elem.classList.add('fail');
            document.getElementById('validation_result').innerHTML = '<?= $this->jsQuoteEscape($this->__('VAT Number is Invalid')) ?>';
        });
    }
</script>
<button onclick="javascript:validateVat(); return false;" class="scalable" type="button" id="<?= $this->getHtmlId() ?>">
    <span id="validation_result"><?= $this->escapeHtml($this->getButtonLabel()) ?></span>
</button>

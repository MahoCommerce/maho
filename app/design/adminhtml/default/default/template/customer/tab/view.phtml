                <td><strong><?= $this->__('Last Logged In (%s):', $this->getStoreLastLoginDateTimezone()) ?></strong></td>
                <td><?= $lastLoginDateStore ?> (<?= $this->getCurrentStatus() ?>)</td>
            </tr>
            <?php endif ?>
            <tr>
                <td><strong><?= $this->__('Confirmed email:') ?></strong></td>
                <td><?= $this->getIsConfirmedStatus() ?></td>
            </tr>
            <tr>
                <td><strong><?= $this->__('Account Created on:') ?></strong></td>
                <td><?= $createDateAdmin ?></td>
            </tr>
            <?php if ($createDateAdmin != $createDateStore): ?>
            <tr>
                <td><strong><?= $this->__('Account Created on (%s):', $this->getStoreCreateDateTimezone()) ?></strong></td>
                <td><?= $createDateStore ?></td>
            </tr>
            <?php endif ?>

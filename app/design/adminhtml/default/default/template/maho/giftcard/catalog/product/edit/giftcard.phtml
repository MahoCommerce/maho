<script type="module">
function toggleGiftcardAmountFields() {
    alert(1)
    const type = document.getElementById('giftcard_type').value;
    const amountsRow = document.getElementById('giftcard_amounts_row');
    const minRow = document.getElementById('giftcard_min_amount_row');
    const maxRow = document.getElementById('giftcard_max_amount_row');

    // Show/hide based on type
    amountsRow.style.display = (type === 'fixed' || type === 'combined') ? '' : 'none';
    minRow.style.display = (type === 'range' || type === 'combined') ? '' : 'none';
    maxRow.style.display = (type === 'range' || type === 'combined') ? '' : 'none';
}

const selectElement = document.getElementById('giftcard_type');
if (selectElement) {
    // Add event listener to select element
    selectElement.addEventListener('change', toggleGiftcardAmountFields);

    // Initialize on page load
    toggleGiftcardAmountFields();
}
</script>

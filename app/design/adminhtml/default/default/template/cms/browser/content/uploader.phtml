<script>
    // Backup event listener for upload success (in case the main one doesn't work)
    document.addEventListener('uploader:success', (event) => {
        if (MediabrowserInstance && MediabrowserInstance.handleUploadComplete) {
            MediabrowserInstance.handleUploadComplete(event.detail.files || []);
        }
    });
</script>

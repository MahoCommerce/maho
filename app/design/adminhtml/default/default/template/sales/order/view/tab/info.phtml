                            <?php $trackNumber = $_track->getNumber();?>
                            <strong><?= $_track->getTitle() ?></strong>
                            <span data-copy-text="<?= $trackNumber ?>"><?= $trackNumber ?></span>
                        </div>
                    <?php endforeach; ?>
                <?php endif ?>
                <?php if ($_order->getShippingDescription()): ?>

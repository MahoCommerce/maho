        <input type="hidden" name="_resume" id="_resume_flag" value="" />
    </div>
    <?= $this->getChildHtml('form') ?>
</form>
<form action="<?= $this->getPreviewUrl() ?>" method="post" id="newsletter_queue_preview_form" target="_blank">
    <?= $this->getBlockHtml('formkey') ?>
    <div class="no-display">
        <input type="hidden" id="preview_type" name="type" value="<?= $this->getIsTextType()?1:2 ?>" />
        <input type="hidden" id="preview_text" name="text" value="" />
        <input type="hidden" id="preview_styles" name="styles" value="" />
        <input type="hidden" id="preview_id" name="id" value="" />
    </div>
</form>
<script>
const queueForm = new varienForm('queue_edit_form');
const newsletterPreviewForm = new varienForm('newsletter_queue_preview_form');

const queueControl = {
    id: 'text',
    
    save() {
        document.getElementById('_resume_flag').value = '';
        queueForm.submit();
    },
    
    preview() {
        const textElement = document.getElementById(this.id);
        const previewTextElement = document.getElementById('preview_text');

        if (this.isEditor()) {
            const editor = window.tiptapEditors?.get(this.id);
            editor?.editor?.updateTextArea();
        }

        previewTextElement.value = textElement.value;

        const stylesElement = document.getElementById('styles');
        if (stylesElement) {
            document.getElementById('preview_styles').value = stylesElement.value;
        }

        const idElement = document.getElementById('id');
        if (idElement) {
            document.getElementById('preview_id').value = idElement.value;
        }

        newsletterPreviewForm.submit();
        return false;
    },
    
    isEditor() {
        return window.tiptapEditors?.has?.(this.id);
    },
    
    resume() {
        document.getElementById('_resume_flag').value = '1';
        queueForm.submit();
    }
};
</script>

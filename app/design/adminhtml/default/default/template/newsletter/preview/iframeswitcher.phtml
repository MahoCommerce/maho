</div>
<div id="loading-mask" style="display:none">
    <div class="backdrop"></div>
    <p class="loader" id="loading_mask_loader">
        <img src="<?= $this->getSkinUrl('images/loading.svg') ?>" alt="<?= $this->quoteEscape(Mage::helper('adminhtml')->__('Loading...')) ?>"/><br/><?= Mage::helper('adminhtml')->__('Please wait...') ?>
    </p>
</div>

<script type="text/javascript">
const previewForm = document.getElementById('preview_form');
const previewIframe = document.getElementById('preview_iframe');

function preview() {
    if (previewForm && previewIframe) {
        previewForm.setAttribute('target', previewIframe.id);
        blockPreview();
        previewForm.submit();
    }
}

function blockPreview() {
    const previewElement = document.getElementById('preview');
    if (previewElement && typeof showLoader === 'function') {
        showLoader(previewElement);
    }
}

function unBlockPreview() {
    if (typeof hideLoader === 'function') {
        hideLoader();
    }
}

window.addEventListener('load', preview);
if (previewIframe) {
    previewIframe.addEventListener('load', unBlockPreview);
}
</script>
</body>
</html>

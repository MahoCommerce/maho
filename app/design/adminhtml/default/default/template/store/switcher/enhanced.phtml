/** @var Mage_Adminhtml_Block_Store_Switcher $this */
?>
<?php $_websiteCollection = $this->getWebsiteCollection() ?>
<?php if ($_websiteCollection->getSize()): ?>
<div id="store_switcher_container">
<p class="switcher"><label for="store_switcher"><?= $this->__('Choose Store View:') ?></label>
<select name="store_switcher" id="store_switcher" class="left-col-block">
    <option value=""><?= $this->escapeHtml($this->getDefaultStoreName()) ?></option>
    <?php foreach ($_websiteCollection as $_website): ?>
        <?php $showWebsite=false; ?>
        <?php foreach ($this->getGroupCollection($_website) as $_group): ?>
            <?php $showGroup=false; ?>
            <?php foreach ($this->getStoreCollection($_group) as $_store): ?>
                <?php if ($showWebsite == false): ?>
                    <?php $showWebsite = true; ?>
                    <optgroup label="<?= $this->escapeHtml($_website->getName()) ?>"></optgroup>
                <?php endif ?>
                <?php if ($showGroup == false): ?>
                    <?php $showGroup = true; ?>
                    <optgroup label="&nbsp;&nbsp;&nbsp;<?= $this->escapeHtml($_group->getName()) ?>">
                <?php endif ?>
                <option group="<?= $_group->getId() ?>" value="<?= $_store->getId() ?>"<?php if($this->getStoreId() == $_store->getId()): ?> selected="selected"<?php endif ?>>&nbsp;&nbsp;&nbsp;&nbsp;<?= $this->escapeHtml($_store->getName()) ?></option>
            <?php endforeach ?>
            <?php if ($showGroup): ?>
                </optgroup>
            <?php endif ?>
        <?php endforeach ?>
    <?php endforeach ?>
</select>
</p>
</div>
<script type="text/javascript">
class varienStore {
    constructor(containerId, storeSwitcher, url, useAjax, useConfirm) {
        this.containerId = containerId;
        this.storeSwitcher = storeSwitcher;
        this.url = url;
        this.useAjax = useAjax;
        this.useConfirm = useConfirm;
        this.storeSelectorClickCallback = false;
        this.storesGroup = {};

        this.initSwitcher();
    }

    optionOnChange(event) {
        if (this.storeSelectorClickCallback) {
            try {
                this.storeSelectorClickCallback(event, this);
            } catch (e) {
                console.error('Store switcher callback error:', e);
            }
        }
    }

    initSwitcher() {
        const switcherElement = document.getElementById(this.storeSwitcher);
        if (switcherElement) {
            const options = document.querySelectorAll(`#${this.containerId} option`);

            options.forEach((option, index) => {
                if (index % 2 === 0) {
                    option.classList.add('even');
                }
                const id = parseInt(option.value, 10);
                if (!isNaN(id)) {
                    this.storesGroup[id] = option.getAttribute('group');
                }
            });

            switcherElement.addEventListener('change', (event) => {
                this.optionOnChange(event);
            });
        }
    }

    getContainerId() {
        return this.containerId;
    }

    isSameStore(checkId, currentId) {
        return this.storesGroup[currentId] === this.storesGroup[checkId];
    }
}

window.varienStoreSwitcher = new varienStore(
    'store_switcher_container',
    'store_switcher',
    '<?= $this->getSwitchUrl() ?>',
    <?= $this->getUseAjax() ? 'true' : 'false' ?>,
    <?= $this->getUseConfirm() ? 'true' : 'false' ?>
);
</script>
<?php endif ?>

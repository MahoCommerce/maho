/**
 * Authorize confirmation simple template
 *
 * @var Mage_Oauth_Block_AuthorizeBaseAbstract $this
 */
?>
<div class="login-container">
    <div class="login-box">
        <div class="page-title">
            <h1><?= $this->__('Confirmation Of Authorization') ?></h1>
        </div>
        <div class="form-box">
            <?= $this->getMessagesBlock()->toHtml() ?>
            <?php if ($this->getVerifier()): ?>
                <h2><?= $this->__('Authorization confirmed') ?></h2>
                <p><?= $this->__('Give the verifier code to application administrator') ?></p>
                <p style="font-size: 14px;"><?= $this->__('Verifier code: %s', $this->getVerifier()) ?></p>
            <?php endif ?>
            <button type="submit" class="button"
                    onclick="window.close();"
                    title="<?= $this->quoteEscape($this->__('Close')) ?>">
                <span><span><?= $this->__('Close') ?></span></span>
            </button>
        </div>
    </div>
</div>

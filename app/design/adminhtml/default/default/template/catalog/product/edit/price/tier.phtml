            </tr>
        </tfoot>
    </table>

<script type="text/javascript">
var tierPriceRowTemplate = '<tr>'
    + '<td<?php if (!$_showWebsite): ?> style="display:none"<?php endif ?>>'
    + '<select class="<?= $_htmlClass ?> required-entry" name="<?= $_htmlName ?>[{{index}}][website_id]" id="tier_price_row_{{index}}_website">'
    <?php foreach ($this->getWebsites() as $_websiteId => $_info): ?>
    + '<option value="<?= $_websiteId ?>"><?= $this->jsQuoteEscape($this->escapeHtml($_info['name'])) ?><?php if (!empty($_info['currency'])): ?> [<?= $this->escapeHtml($_info['currency']) ?>]<?php endif ?></option>'
    <?php endforeach ?>
    + '</select></td>'
    + '<td><select class="<?= $_htmlClass ?> custgroup required-entry" name="<?= $_htmlName ?>[{{index}}][cust_group]" id="tier_price_row_{{index}}_cust_group">'
    <?php foreach ($this->getCustomerGroups() as $_groupId=>$_groupName): ?>
    + '<option value="<?= $_groupId ?>"><?= $this->jsQuoteEscape($this->escapeHtml($_groupName)) ?></option>'
    <?php endforeach ?>
    + '</select></td>'
    + '<td class="nobr"><input class="<?= $_htmlClass ?> qty required-entry validate-greater-than-zero" type="text" name="<?= $_htmlName ?>[{{index}}][price_qty]" value="{{qty}}" id="tier_price_row_{{index}}_qty" />'
    + ' <small class="nobr"><?= $this->jsQuoteEscape(Mage::helper('catalog')->__('and above')) ?></small></td>'
    + '<td><input class="<?= $_htmlClass ?> required-entry <?= $_priceValueValidation ?>" type="text" name="<?= $_htmlName ?>[{{index}}][price]" value="{{price}}" id="tier_price_row_{{index}}_price" /></td>'
    + '<td class="last"><input type="hidden" name="<?= $_htmlName ?>[{{index}}][delete]" class="delete" value="" id="tier_price_row_{{index}}_delete" />'
    + '<button title="<?= $this->jsQuoteEscape(Mage::helper('catalog')->__("Delete Tier")) ?>" type="button" class="scalable delete icon-btn delete-product-option" id="tier_price_row_{{index}}_delete_button" onclick="return tierPriceControl.deleteItem(event);">'
    + '<?= $this->jsQuoteEscape(Mage::helper('catalog')->__("Delete")) ?></button></td>'
    + '</tr>';

const tierPriceControl = {
    template: new Template(tierPriceRowTemplate, Template.HANDLEBARS_PATTERN),
    itemsCount: 0,
    addItem: function () {
        <?php if ($_readonly): ?>
        if (arguments.length < 4) {
            return;
        }
        <?php endif ?>
        const data = {
            website_id: '<?= $this->getDefaultWebsite() ?>',
            group: '<?= $this->getDefaultCustomerGroup() ?>',
            qty: '',
            price: '',
            readOnly: false,
            index: this.itemsCount++
        };

        if (arguments.length >= 4) {
            data.website_id = arguments[0];
            data.group = arguments[1];
            data.qty = arguments[2];
            data.price = arguments[3];
        }
        if (arguments.length === 5) {
            data.readOnly = arguments[4];
        }

        const container = document.getElementById('<?= $_htmlId ?>_container');
        if (container) {
            container.insertAdjacentHTML('beforeend', this.template.evaluate(data));
        }

        const custGroupElement = document.getElementById(`tier_price_row_${data.index}_cust_group`);
        const websiteElement = document.getElementById(`tier_price_row_${data.index}_website`);

        if (custGroupElement) {
            custGroupElement.value = data.group;
        }
        if (websiteElement) {
            websiteElement.value = data.website_id;
        }

        <?php if ($this->isShowWebsiteColumn() && !$this->isAllowChangeWebsite()):?>
        if (websiteElement) {
            const txt = websiteElement.options[websiteElement.selectedIndex].text;
            websiteElement.insertAdjacentHTML('afterend', `<span class="website-name">${txt}</span>`);
            websiteElement.style.display = 'none';
        }
        <?php endif ?>

        if (data.readOnly === '1') {
            ['website', 'cust_group', 'qty', 'price', 'delete'].forEach(idx => {
                const element = document.getElementById(`tier_price_row_${data.index}_${idx}`);
                if (element) {
                    element.disabled = true;
                }
            });
            const deleteButton = document.getElementById(`tier_price_row_${data.index}_delete_button`);
            if (deleteButton) {
                deleteButton.style.display = 'none';
            }
        }

        <?php if ($_readonly): ?>
        if (container) {
            const inputs = container.querySelectorAll('input, select');
            inputs.forEach(this.disableElement);
            const table = container.closest('table');
            if (table) {
                const buttons = table.querySelectorAll('button');
                buttons.forEach(this.disableElement);
            }
        }
        <?php else: ?>
        if (container) {
            const inputs = container.querySelectorAll('input, select');
            inputs.forEach(el => {
                el.addEventListener('change', el.setHasChanges ? () => el.setHasChanges(el) : function() {});
            });
            const deleteButtons = container.querySelectorAll('button.delete');
            deleteButtons.forEach(el => {
                el.addEventListener('click', el.setHasChanges ? () => el.setHasChanges(el) : function() {});
            });
        }
        <?php endif ?>
    },
    disableElement: function(el) {
        el.disabled = true;
        el.classList.add('disabled');
    },
    deleteItem: function(event) {
        const tr = event.target.closest('tr');
        if (tr) {
            const deleteInputs = tr.querySelectorAll('.delete');
            deleteInputs.forEach(elem => {
                elem.value = '1';
            });
            const inputs = tr.querySelectorAll('input, select');
            inputs.forEach(elem => {
                elem.style.display = 'none';
            });
            tr.style.display = 'none';
            tr.classList.add('no-display', 'template');
        }
        return false;
    }
};
<?php foreach ($this->getValues() as $_item): ?>
tierPriceControl.addItem('<?= $_item['website_id'] ?>', '<?= $_item['cust_group'] ?>', '<?= $_item['price_qty']*1 ?>', '<?= sprintf('%.2f', $_item['price']) ?>', <?= (int)!empty($_item['readonly']) ?>);
<?php endforeach ?>
<?php if ($_readonly): ?>
document.getElementById('<?= $_htmlId ?>_container').closest('table').querySelectorAll('button')
    .forEach(tierPriceControl.disableElement);
<?php endif ?>
</script>

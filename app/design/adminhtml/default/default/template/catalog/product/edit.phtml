<div class="content-header">
    <h3><?= $this->getHeader() ?></h3>
    <p class="content-buttons form-buttons"><?= $this->getBackButtonHtml() ?>
    <?= $this->getCancelButtonHtml() ?>
    <?php if($this->getProductId()): ?>
        <?= $this->getDeleteButtonHtml() ?>

<script type="text/javascript">
    const productWebsiteCheckboxes = document.querySelectorAll('.website-checkbox');

    productWebsiteCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('click', toggleStoreFromChoosers);
    });

    function toggleStoreFromChoosers(event) {
        const element = event.target;
        const dataContainer = document.getElementById(element.id + '_data');

        if (dataContainer) {
            const selects = dataContainer.querySelectorAll('select');
            const selectBlocks = dataContainer.querySelectorAll(`.website-${element.value}-select`);

            selects.forEach(select => {
                select.disabled = !element.checked;
            });

            selectBlocks.forEach(block => {
                block.style.display = element.checked ? '' : 'none';
            });
        }
    }
</script>

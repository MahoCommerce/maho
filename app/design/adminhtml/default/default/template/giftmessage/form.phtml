/** @var Mage_GiftMessage_Block_Message_Form $this */
?>
<?= $this->helper('core/js')->includeScript('mage/adminhtml/giftmessage.js') ?>
<?php if(!$this->getSaveMode()): ?>
<form action="<?= $this->getSaveUrl() ?>" id="message-form" method="post" class="a-left">
    <?= $this->getBlockHtml('formkey') ?>
    <?= $this->getFormHtml() ?>
    <?= $this->getSaveButtonHtml() ?>
    <?= $this->getCancelButtonHtml() ?>
    <?php if($this->getMessage()->getGiftMessageId()): ?>
    <?= $this->getRemoveButtonHtml() ?>
    <?php endif ?>
</form>
<?php elseif($this->getSaveMode() == 'save'): ?>
<h3><?= Mage::helper('giftmessage')->__('The gift message has been saved') ?></h3>
<br /><?= $this->getCloseButtonHtml() ?>
<?php else: ?>
<h3><?= Mage::helper('giftmessage')->__('The gift message has been removed') ?></h3>
<br /><?= $this->getCloseButtonHtml() ?>
<?php endif ?>
<script type="text/javascript">
<?php if(!$this->getSaveMode()): ?>
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof GiftMessageWindow !== 'undefined') {
            window.giftMessageWindowObject = new GiftMessageWindow('<?= $this->getUniqueId() ?>','message-form', '<?= $this->getRemoveUrl() ?>');
            window.giftMessageWindowObject.confirmMessage = '<?= $this->getEscapedForJs(Mage::helper('giftmessage')->__('Are you sure?')) ?>';
        }
    });
<?php else: ?>
    document.addEventListener('DOMContentLoaded', () => {
        if (typeof GiftMessageWindow !== 'undefined') {
            window.giftMessageWindowObject = new GiftMessageWindow('<?= $this->getUniqueId() ?>', null, '<?= $this->getRemoveUrl() ?>');
            window.addEventListener('load', () => {
                if (window.giftMessageWindowObject) {
                    window.giftMessageWindowObject.updateParent('<?= $this->getEditUrl() ?>', '<?= $this->getButtonUrl() ?>');
                }
            });
        }
    });
<?php endif ?>
</script>

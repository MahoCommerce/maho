<layout>
    <!-- Countries Management -->
    <adminhtml_directory_country_index>
        <reference name="content">
            <block type="adminhtml/directory_country" name="directory.country"/>
        </reference>
    </adminhtml_directory_country_index>

    <adminhtml_directory_country_grid>
        <reference name="content">
            <block type="adminhtml/directory_country_grid" name="directory.country.grid"/>
        </reference>
    </adminhtml_directory_country_grid>

    <adminhtml_directory_country_edit>
        <reference name="content">
            <block type="adminhtml/directory_country_edit" name="directory.country.edit"/>
        </reference>
    </adminhtml_directory_country_edit>

    <adminhtml_directory_country_new>

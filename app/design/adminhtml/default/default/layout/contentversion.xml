<layout>
    <!-- CMS Page edit: add Versions tab -->
    <adminhtml_cms_page_edit>
        <reference name="cms_page_edit_tabs">
            <block type="contentversion/adminhtml_version_tab" name="cms_page_versions_tab">
                <action method="setEntityType"><type>cms_page</type></action>
                <action method="setRegistryKey"><key>cms_page</key></action>
            </block>
            <action method="addTab"><name>versions_section</name><block>cms_page_versions_tab</block></action>
        </reference>
    </adminhtml_cms_page_edit>

    <!-- CMS Block edit: add Versions tab -->
    <adminhtml_cms_block_edit>
        <reference name="cms_block_edit_tabs">
            <block type="contentversion/adminhtml_version_tab" name="cms_block_versions_tab">
                <action method="setEntityType"><type>cms_block</type></action>
                <action method="setRegistryKey"><key>cms_block</key></action>
            </block>
            <action method="addTab"><name>versions_section</name><block>cms_block_versions_tab</block></action>
        </reference>
    </adminhtml_cms_block_edit>

    <!-- Blog Post edit: add Versions tab -->
    <adminhtml_blog_post_edit>
        <reference name="blog_post_edit_tabs">
            <block type="contentversion/adminhtml_version_tab" name="blog_post_versions_tab">
                <action method="setEntityType"><type>blog_post</type></action>
                <action method="setRegistryKey"><key>blog_post</key></action>
            </block>
            <action method="addTab"><name>versions_section</name><block>blog_post_versions_tab</block></action>
        </reference>
    </adminhtml_blog_post_edit>
</layout>

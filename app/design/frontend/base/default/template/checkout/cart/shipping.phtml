        <script type="text/javascript">
            const countriesWithOptionalZip = <?= $this->helper('directory')->getCountriesWithOptionalZip(true) ?>;

            class ShippingFormValidator {
                constructor(formId) {
                    this.form = document.getElementById(formId);
                    this.setupValidation();
                }

                setupValidation() {
                    if (!this.form) return;

                    this.form.addEventListener('submit', (e) => {
                        e.preventDefault();
                        this.submit();
                    });
                }

                submit() {
                    const country = document.getElementById('country').value;
                    const optionalZip = countriesWithOptionalZip.includes(country);
                    const postcodeElement = document.getElementById('postcode');

                    // Update postcode validation based on country
                    postcodeElement.classList.toggle('required-entry', !optionalZip);

                    // Validate form
                    if (this.validate()) {
                        this.form.submit();
                    }
                }

                validate() {
                    let isValid = true;
                    const requiredFields = this.form.querySelectorAll('.required-entry');

                    requiredFields.forEach(field => {
                        if (!field.value.trim()) {
                            field.classList.add('validation-failed');
                            isValid = false;
                        } else {
                            field.classList.remove('validation-failed');
                        }
                    });

                    return isValid;
                }
            }

            const coShippingMethodForm = new ShippingFormValidator('shipping-zip-form');

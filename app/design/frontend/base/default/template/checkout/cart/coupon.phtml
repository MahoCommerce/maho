/** @var Mage_Checkout_Block_Cart_Coupon $this */
?>
<form id="discount-coupon-form" action="<?= $this->getFormActionUrl() ?>" method="post">
    <div class="discount">
        <h2><?= $this->__('Discount Codes') ?></h2>
        <div class="discount-form">
            <input type="hidden" name="remove" id="remove-coupone" value="0" />
            <div class="coupon-input-group">
                <label for="coupon_code" class="visually-hidden"><?= $this->__('Enter discount code') ?></label>
                <input
                    class="input-text coupon-input"
                    type="text"
                    id="coupon_code"
                    name="coupon_code"
                    value="<?= $this->escapeHtml($this->getCouponCode()) ?>"
                    placeholder="<?= $this->__('Enter discount code') ?>" />
                <button type="button" title="<?= $this->quoteEscape($this->__('Apply')) ?>" class="button2 btn-apply" onclick="discountForm.submit(false)"><?= $this->__('Apply') ?></button>
                <?php if(strlen($this->getCouponCode())): ?>
                    <button type="button" title="<?= $this->quoteEscape($this->__('Cancel')) ?>" class="button2 btn-cancel cancel-coupon" onclick="discountForm.submit(true)"><?= $this->__('Cancel') ?></button>
                <?php endif ?>
            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    const discountForm = new VarienForm('discount-coupon-form');
    discountForm.submit = function(isRemove) {
        const couponCode = document.getElementById('coupon_code');
        const removeCoupon = document.getElementById('remove-coupone');

        if (isRemove) {
            couponCode.classList.remove('required-entry');
            removeCoupon.value = "1";
        } else {
            couponCode.classList.add('required-entry');
            removeCoupon.value = "0";
        }

        return this.form.submit();
    }
</script>

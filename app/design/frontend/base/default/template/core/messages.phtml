<?php  foreach ($types as $type) {
            if ( $messages = $this->getMessages($type) ) {
                if ( !$html ) {
                    $html .= '<ul class="messages">';
                }
                $messageRole = ($type === 'error' || $type === 'warning') ? 'alert' : 'status';
                $html .= '<li class="' . $type . '-msg" role="' . $messageRole . '" aria-live="polite">';
                $html .= '<ul>';

                foreach ( $messages as $message ) {
                    $html.= '<li>';
                    $html.= $message->getText();
                    $html.= '</li>';
                }
                $html .= '</ul>';
                $html .= '</li>';
            }
        }
        if ( $html) {
            $html .= '</ul>';
            // Wrap in a region for screen readers
            $html = '<div class="messages-wrapper" role="region" aria-label="' . $this->__('Messages') . '">' . $html . '</div>';
        }
?>

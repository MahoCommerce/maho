        <script type="text/javascript">
            var productAddToCartForm = new VarienForm('product_addtocart_form');
            productAddToCartForm.submit = async function(button, url) {
                if (!this.validator.validate()) {
                    return;
                }

                const form = this.form;
                const targetUrl = url || form.action;

                if (button && button !== 'undefined') {
                    button.disabled = true;
                }

                try {
                    const result = await mahoFetch(targetUrl, {
                        method: 'POST',
                        body: new FormData(form),
                        loaderArea: form.closest('.product-view')
                    });

                    if (result.success && typeof minicart !== 'undefined') {
                        minicart.updateCartQty(result.qty);
                        minicart.updateContent(result);
                        minicart.init();
                        minicart.openOffcanvas();
                        setTimeout(() => minicart.showMessage(result), 100);
                    } else if (result.error) {
                        alert(result.error);
                    }
                } catch (error) {
                    alert(error.message || '<?= $this->jsQuoteEscape($this->__('Cannot add the item to shopping cart.')) ?>');
                } finally {
                    if (button && button !== 'undefined') {
                        button.disabled = false;
                    }
                }
            }.bind(productAddToCartForm);

            productAddToCartForm.submitLight = function(button, url) {
                if (this.validator) {
                    // Store original validation methods
                    const originalMethods = { ...Validation.methods };

                    // Remove validation methods
                    delete Validation.methods['required-entry'];
                    delete Validation.methods['validate-one-required'];
                    delete Validation.methods['validate-one-required-by-name'];

                    // Remove datetime validators
                    Object.keys(Validation.methods).forEach(methodName => {
                        if (methodName.match(/^validate-datetime-.*/i)) {
                            delete Validation.methods[methodName];
                        }
                    });

                    if (this.validator.validate()) {
                        if (url) {
                            this.form.action = url;
                        }
                        this.form.submit();
                    }

                    // Restore original validation methods
                    Validation.methods = { ...originalMethods };
                }
            }.bind(productAddToCartForm);
        </script>

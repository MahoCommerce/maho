/** @var Mage_Catalog_Block_Product_View_Options_Type_Select $this */
$option = $this->getOption();
?>
<dt>
    <label<?= $option->getIsRequired() ? ' class="required"' : '' ?>><?=  $this->escapeHtml($option->getTitle()) ?></label>
</dt>
<dd>
    <div class="input-box">
        <?= $this->getValuesHtml() ?>
        <?php if ($option->getIsRequired()): ?>
            <?php if ($option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_RADIO || $option->getType() == Mage_Catalog_Model_Product_Option::OPTION_TYPE_CHECKBOX): ?>
                <span id="options-<?= $option->getId() ?>-container"></span>
            <?php endif ?>
        <?php endif ?>
    </div>
</dd>

/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 * @var Mage_Catalog_Block_Layer_View $this 
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="block block-layered-nav">
    <div class="block-title">
        <strong><span><?= $this->__('Shop By') ?></span></strong>
    </div>
    <div class="block-content">
        <?= $this->getStateHtml() ?>
        <?php if ($this->getLayer()->getState()->getFilters()): ?>
            <div class="actions"><a href="<?= $this->getClearUrl() ?>"><?= $this->__('Clear All') ?></a></div>
        <?php endif ?>
        <?php if($this->canShowOptions()): ?>
            <p class="block-subtitle"><?= $this->__('Shopping Options') ?></p>
            <dl id="narrow-by-list">
                <?php $_filters = $this->getFilters() ?>
                <?php foreach ($_filters as $_filter): ?>
                <?php if($_filter->getItemsCount()): ?>
                    <dt><?= $this->__($_filter->getName()) ?></dt>
                    <dd><?= $_filter->getHtml() ?></dd>
                <?php endif ?>
                <?php endforeach ?>
            </dl>
        <?php endif ?>
    </div>
</div>
<?php endif ?>

/** @var Mage_Customer_Block_Newsletter $this */
$isSubscribed = $this->getIsSubscribed();
?>
<div class="page-title">
    <h1><?= $this->__('Newsletter Subscription') ?></h1>
</div>
<?= $this->getMessagesBlock()->toHtml() ?>
<?= $this->getChildHtml('form_before') ?>
<form action="<?= $this->getAction() ?>" method="post" id="form-validate">
    <?= $this->getBlockHtml('formkey') ?>
    <input type="hidden" name="is_subscribed" value="<?= $isSubscribed ? '0' : '1' ?>">
    <p class="newsletter-description">
        <?php if ($isSubscribed): ?>
            <?= $this->__('You are currently subscribed to our newsletter.') ?>
        <?php else: ?>
            <?= $this->__('Be the first to know about new arrivals, special offers, and insider news.') ?>
        <?php endif ?>
    </p>
    <?= $this->getChildHtml('customer.form.newsletter.extra') ?>
    <?php if ($isSubscribed): ?>
        <button type="submit" title="<?= $this->quoteEscape($this->__('Unsubscribe')) ?>" class="button">
            <?= $this->__('Unsubscribe') ?>
        </button>
    <?php else: ?>
        <button type="submit" title="<?= $this->quoteEscape($this->__('Subscribe')) ?>" class="button">
            <?= $this->__('Subscribe') ?>
        </button>
    <?php endif ?>
</form>
<?= $this->getChildHtml('customer.form.newsletter.extra2') ?>

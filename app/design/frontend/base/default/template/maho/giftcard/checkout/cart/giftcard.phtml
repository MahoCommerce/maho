/** @var Maho_Giftcard_Block_Checkout_Cart_Giftcard $this */
$appliedCodes = $this->getAppliedGiftcardCodes();
?>

<form id="giftcard-cart-form" action="<?php echo $this->getUrl('giftcard/cart/apply') ?>" method="post">
    <div class="discount">
        <h2><?php echo $this->__('Gift Cards') ?></h2>
        <div class="discount-form">
            <input type="hidden" name="remove" id="remove-giftcard" value="0">

            <?php if (!empty($appliedCodes)): ?>
                <div class="applied-giftcards" style="margin-bottom: 10px;">
                    <?php foreach ($appliedCodes as $code => $amount): ?>
                        <?php
                            // Display partial code for security
                            $displayCode = $code;
                            if (strlen($code) > 10) {
                                $displayCode = substr($code, 0, 4) . '...' . substr($code, -4);
                            }
                        ?>
                        <div class="applied-code" style="margin-bottom: 5px;">
                            <span><?php echo $this->escapeHtml($displayCode) ?>:
                                -<?php echo Mage::helper('core')->currency($amount, true, false) ?></span>
                            <a href="<?php echo $this->getUrl('giftcard/cart/remove', ['code' => $code]) ?>"
                               title="<?php echo $this->__('Remove') ?>"
                               style="margin-left: 10px; color: #cc0000;">[<?php echo $this->__('Remove') ?>]</a>
                        </div>
                    <?php endforeach; ?>
                </div>
            <?php endif; ?>

            <div class="coupon-input-group">
                <label for="giftcard_code" class="visually-hidden"><?php echo $this->__('Enter gift card code') ?></label>
                <input class="input-text coupon-input" type="text" id="giftcard_code" name="giftcard_code" value="" placeholder="<?php echo $this->__('Enter gift card code') ?>">
                <button type="button" title="<?php echo $this->__('Apply') ?>" class="button2 btn-apply" id="giftcard-apply-btn"><?php echo $this->__('Apply') ?></button>
            </div>
        </div>
    </div>
</form>

<script type="module">
const form = document.getElementById('giftcard-cart-form');
const codeInput = document.getElementById('giftcard_code');
const removeInput = document.getElementById('remove-giftcard');
const applyBtn = document.getElementById('giftcard-apply-btn');
const requiredFieldMessage = <?php echo Mage::helper('core')->jsonEncode($this->__('This is a required field.')) ?>;

function showError(message) {
    codeInput.classList.add('validation-failed');
    codeInput.focus();

    let existingError = codeInput.parentElement.querySelector('.validation-advice');
    if (!existingError) {
        const errorMsg = document.createElement('div');
        errorMsg.className = 'validation-advice';
        errorMsg.style.color = '#df280a';
        errorMsg.style.fontSize = '0.85em';
        errorMsg.style.marginTop = '4px';
        errorMsg.textContent = message;
        codeInput.parentElement.appendChild(errorMsg);
    }
}

function clearError() {
    codeInput.classList.remove('validation-failed');
    const error = codeInput.parentElement.querySelector('.validation-advice');
    if (error) {
        error.remove();
    }
}

function submitGiftcard(isRemove) {
    if (isRemove) {
        codeInput.classList.remove('required-entry');
        codeInput.removeAttribute('required');
        removeInput.value = '1';
    } else {
        if (!codeInput.value.trim()) {
            showError(requiredFieldMessage);
            return false;
        }
        clearError();
    }

    form.submit();
    return true;
}

applyBtn.addEventListener('click', () => submitGiftcard(false));

codeInput.addEventListener('input', clearError);

codeInput.addEventListener('keypress', (e) => {
    if (e.key === 'Enter') {
        e.preventDefault();
        submitGiftcard(false);
    }
});
</script>

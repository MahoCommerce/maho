<layout version="0.1.0">
    <default>
        <reference name="header">
            <block type="page/template_links" name="account.links" as="accountLinks" template="persistent/header/links.phtml"/>
        </reference>
    </default>

    <customer_account_login>
        <update handle="customer_account_login_persistent" ifconfig="persistent/options/enabled" />
        <action block="customer_form_login" method="setTemplateIfExists">
            <template>persistent/customer/form/login.phtml</template>
        </action>
    </customer_account_login>

    <customer_account_create>
        <update handle="customer_account_create_persistent" ifconfig="persistent/options/enabled" />
        <action block="customer_form_register" method="setTemplateIfExists">
            <template>persistent/customer/form/register.phtml</template>
        </action>
    </customer_account_create>

    <checkout_onepage_index>
        <update handle="checkout_onepage_index_persistent" ifconfig="persistent/options/enabled" />
        <action block="checkout.onepage.login" method="setTemplateIfExists">
            <template>persistent/checkout/onepage/login.phtml</template>
        </action>
        <action block="checkout.onepage.billing" method="setTemplateIfExists">
            <template>persistent/checkout/onepage/billing.phtml</template>
        </action>
    </checkout_onepage_index>

    <customer_account_login_persistent>
        <reference name="customer_form_login">
            <block type="persistent/form_remember" name="persistent.remember.me" template="persistent/remember_me.phtml" />
        </reference>
    </customer_account_login_persistent>

    <customer_account_create_persistent>
        <reference name="customer_form_register">
            <block type="persistent/form_remember" name="persistent.remember.me" template="persistent/remember_me.phtml" />
        </reference>
    </customer_account_create_persistent>

    <checkout_onepage_index_persistent>
        <reference name="checkout.onepage.login">
            <block type="persistent/form_remember" name="persistent.remember.me" template="persistent/remember_me.phtml" />
        </reference>
        <reference name="checkout.onepage.billing">
            <block type="persistent/form_remember" name="persistent.remember.me" template="persistent/remember_me.phtml" />
        </reference>
    </checkout_onepage_index_persistent>

    <customer_logged_out>
        <reference name="right">
            <block type="sales/reorder_sidebar" name="sale.reorder.sidebar" as="reorder" template="sales/reorder/sidebar.phtml"/>
        </reference>
    </customer_logged_out>
</layout>

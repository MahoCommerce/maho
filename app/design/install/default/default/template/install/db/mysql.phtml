</li>
<li>
    <label for="dbname"><?= $this->__('Database Name') ?></label>
    <input type="text"
           name="connection[<?= $this->getIdPrefix()?>][db_name]"
           id="dbname"
           value="<?= $this->getFormData()->getDbName() ?>"
           title="<?= $this->quoteEscape($this->__('Database Name')) ?>"
           class="input-text"
           required>
</li>
<li>
    <label for="user"><?= $this->__('User Name') ?></label>
    <input type="text"
           name="connection[<?= $this->getIdPrefix()?>][db_user]"
           id="user"
           value="<?= $this->getFormData()->getDbUser() ?>"
           title="<?= $this->quoteEscape($this->__('Database user name')) ?>"
           class="input-text"
           required>
</li>
<li>
    <label for="password"><?= $this->__('User Password') ?></label>
    <input type="password"
           name="connection[<?= $this->getIdPrefix()?>][db_pass]"
           id="password"
           value=""
           title="<?= $this->quoteEscape($this->__('Database user password')) ?>"
           class="input-text">
</li>
<li>
    <label for="prefix"><?= $this->__('Tables Prefix') ?></label>
    <input type="text"
           name="connection[<?= $this->getIdPrefix()?>][db_prefix]"
           id="prefix"
           value="<?= $this->getFormData()->getDbPrefix() ?>"
           title="<?= $this->quoteEscape($this->__('Tables Prefix')) ?>"
           class="input-text">

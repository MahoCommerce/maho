 */
?>
<li>
    <label for="host"><?= $this->__('Host') ?></label>
    <input type="text"
           name="connection[<?= $this->getIdPrefix()?>][db_host]"
           id="host"
           value="<?= $this->getFormData()->getDbHost() ?>"
           title="<?= $this->quoteEscape($this->__('Database host')) ?>"
           class="input-text"
           required>
    <p class="field-note">
        <?= $this->__('You can specify server port, ex.: localhost:3307<br>If you are not using default UNIX socket, you can specify it here instead of host, ex.: /var/run/mysqld/mysqld.sock') ?>

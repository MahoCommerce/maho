<layout>
    <install_wizard>
        <!-- Mage_Install -->
        <block type="core/template" name="root" output="toHtml">
            <action method="setTemplate"><template>page.phtml</template></action>
            <block type="core/text_list" name="left" as="left"/>
            <block type="core/text_list" name="content" as="content" />
        </block>
        <block type="install/configuration_database" name="database" as="database"/>
    </install_wizard>
    <install_wizard_configuration>
        <reference name="database">
            <action method="setTemplate"><template>page/configuration/database.phtml</template></action>
            <action method="addDatabaseBlock"><type>mysql</type><block>install/configuration_database_type_mysql</block><template>page/configuration/database/mysql.phtml</template></action>
            <action method="addDatabaseBlock"><type>pgsql</type><block>install/configuration_database_type_pgsql</block><template>page/configuration/database/pgsql.phtml</template></action>
            <action method="addDatabaseBlock"><type>sqlite</type><block>install/configuration_database_type_sqlite</block><template>page/configuration/database/sqlite.phtml</template></action>
        </reference>
    </install_wizard_configuration>
</layout>
